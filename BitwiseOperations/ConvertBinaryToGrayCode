/*
Program to find gray code of a number 
*/
import java.util.*;
public class Main {
    public static void main(String[] args) {
        System.out.println("Enter number");

        Scanner input = new Scanner(System.in);
        int n = input.nextInt();
        System.out.println("Gray code of number is: " + (n ^ (n >> 1)));
    }
}
